{
  "name": "bun-ts-starter",
  "description": "Bun-native TypeScript library boilerplate",
  "version": "0.0.0",
  "type": "module",
  "files": [
    "dist"
  ],
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "author": "Mancuoj <mancuoj@gmail.com>",
  "license": "MIT",
  "repository": "mancuoj/bun-ts-starter",
  "scripts": {
    "build": "bunup",
    "dev": "bunup --watch",
    "tsc": "tsc --noEmit",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "release": "bumpp && bun publish --access public",
    "format": "prettier -w ."
  },
  "devDependencies": {
    "@mancuoj/prettier-config": "^0.5.3",
    "@types/bun": "^1.2.19",
    "bumpp": "^10.2.0",
    "bunup": "^0.8.71",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3"
  },
  "prettier": "@mancuoj/prettier-config"
}
